            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  example: {
    name: "deepa",
    dateofjourney: "25-9-2020",
    depatur: "hyd"
  }
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
    <flow name="get:\indigoflights:jetflights-config">
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  example: {
    name: "deepa",
    dateofjourney: "25-9-2020",
    depatur: "hyd"
  }
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
		<logger level="INFO" doc:name="Logger" doc:id="6dbad711-a25d-4520-be68-16458a0675a3" message="INDIGO FLIGHTS......................."/>
    </flow>
</mule>
